+public class Issue3746Test extends AbstractLexicalPreservingTest {
+
+	@Test
+    void test() {
+        considerCode(
+                "public class MyClass {\n"
+                        + " String s0;\n"
+                        + " // Comment\n"
+                        + " String s1;\n"
+                        + "}");
+
+        considerCode("class A {\n"
+				+ "  void foo() {\n"
+				+ "    int first = 1;\n"
+				+ "    int second = 2;\n"
+				+ "  }\n"
+				+ "}"
+				);
